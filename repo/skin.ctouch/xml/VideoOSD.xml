<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">655</defaultcontrol>
	<controls>
		<visible>Player.HasMedia</visible>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" condition="Window.IsVisible(sliderdialog) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(videobookmarks)">conditional</animation>
			<control type="group">
				<!-- Player info labels -->
				<control type="group" id="1">
					<visible>!VideoPlayer.Content(LiveTV)</visible>
					<control type="label" id="1">
						<left>25</left>
						<top>905</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch19</font>
						<label>Acaba a las $INFO[Player.FinishTime]</label>
						<align>left</align>
					</control>
					<control type="label" id="1">
						<left>1550</left>
						<top>905</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch19</font>
						<label>$INFO[VideoPlayer.Time] | $INFO[Player.Duration]</label>
						<align>right</align>
					</control>
				</control>
				<control type="group" id="1">
					<visible>VideoPlayer.Content(LiveTV)</visible>
					<control type="label" id="1">
						<left>25</left>
						<top>1020</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch20</font>
						<label>[COLOR=disabled-text]($INFO[System.Time])[/COLOR] $INFO[PVR.EpgEventElapsedTime]</label>
						<align>left</align>
					</control>
					<control type="label" id="1">
						<left>1550</left>
						<top>1020</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch20</font>
						<label>-$INFO[PVR.EpgEventRemainingTime] [COLOR=disabled-text]($INFO[PVR.EpgEventFinishTime])[/COLOR]</label>
						<align>right</align>
					</control>
				</control>
				<control type="group">
					<visible>![Window.IsVisible(seekbar)]</visible>
					<control type="group" id="1">
						<visible>!VideoPlayer.Content(LiveTV)</visible>
						<control type="progress" id="1">
							<left>25</left>
							<top>950</top>
							<width>1870</width>
							<height>22</height>
							<info>Player.ProgressCache</info>
							<colordiffuse>CacheBarColor</colordiffuse>
						</control>
						<control type="progress" id="1">
							<left>25</left>
							<top>950</top>
							<width>1870</width>
							<height>22</height>
							<info>Player.Progress</info>
						</control>
						<control type="slider" id="690">
							<!-- Seek Slider -->
							<left>25</left>
							<top>950</top>
							<width>1870</width>
							<height>25</height>
							<action>seek</action>
							<onup>650</onup>
						</control>
					</control>
					<control type="progress" id="1">
						<left>25</left>
						<top>975</top>
						<width>1870</width>
						<height>22</height>
						<info>PVR.EpgEventProgress</info>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
					<control type="slider" id="691">
						<!-- Seek Slider -->
						<left>25</left>
						<top>975</top>
						<width>1870</width>
						<height>25</height>
						<info>PVR.TimeshiftProgressPlayPos</info>
						<action>pvr.seek</action>
						<onup>650</onup>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
				</control>
			</control>
			<control type="grouplist" id="650">
				<!-- Default group OSD buttons -->
				<centerleft>50%</centerleft>
				<top>990</top>
				<width>600</width>
				<height>72</height>
				<itemgap>20</itemgap>
				<orientation>horizontal</orientation>
				<align>center</align>
				<ondown condition="!VideoPlayer.Content(LiveTV)">690</ondown>
				<ondown condition="VideoPlayer.Content(LiveTV)">691</ondown>
				<onleft>621</onleft>
				<control type="button" id="642">
					<!-- Skip Bwd -->
					<width>72</width>
					<height>72</height>
					<texturefocus>osd-btn-skipback-focus.png</texturefocus>
					<texturenofocus>osd-btn-skipback.png</texturenofocus>
					<onclick>PlayerControl(Previous)</onclick>
					<include>focus-zoom</include>
				</control>				
				<control type="button" id="654">
					<!-- Rewind -->
					<width>72</width>
					<height>72</height>
					<texturefocus>osd-btn-rewind-focus.png</texturefocus>
					<texturenofocus>osd-btn-rewind.png</texturenofocus>
					<onclick>PlayerControl(Rewind)</onclick>
					<onup>SetFocus(640)</onup>
					<include>focus-zoom</include>
				</control>
				<control type="togglebutton" id="655">
					<!-- Play -->
					<width>72</width>
					<height>72</height>
					<texturefocus>osd-btn-pause-focus.png</texturefocus>
					<texturenofocus>osd-btn-pause.png</texturenofocus>
					<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
					<alttexturefocus>osd-btn-play-focus.png</alttexturefocus>
					<alttexturenofocus>osd-btn-play.png</alttexturenofocus>
					<onclick>PlayerControl(Play)</onclick>
					<onup>SetFocus(620)</onup>
					<include>focus-zoom</include>
				</control>
				<control type="button" id="656">
					<!-- Stop -->
					<width>72</width>
					<height>72</height>
					<texturefocus>osd-btn-stop-focus.png</texturefocus>
					<texturenofocus>osd-btn-stop.png</texturenofocus>
					<onclick>PlayerControl(Stop)</onclick>
					<include>focus-zoom</include>
				</control>
				<control type="button" id="657">
					<!-- Fast Forward -->
					<width>72</width>
					<height>72</height>
					<texturefocus>osd-btn-fastfwd-focus.png</texturefocus>
					<texturenofocus>osd-btn-fastfwd.png</texturenofocus>
					<onclick>PlayerControl(Forward)</onclick>
					<onup>SetFocus(660)</onup>
					<include>focus-zoom</include>
				</control>
				<control type="button" id="662">
					<!-- Skip Fwd -->
					<width>72</width>
					<height>72</height>
					<texturefocus>osd-btn-skipfwd-focus.png</texturefocus>
					<texturenofocus>osd-btn-skipfwd.png</texturenofocus>
					<onclick>PlayerControl(Next)</onclick>
					<include>focus-zoom</include>
				</control>	
			</control>	
			<control type="grouplist" id="621">
				<left>30</left>
				<top>990</top>
				<width>600</width>
				<height>72</height>
				<itemgap>15</itemgap>
				<orientation>horizontal</orientation>
				<align>left</align>
				<ondown condition="!VideoPlayer.Content(LiveTV)">690</ondown>
				<ondown condition="VideoPlayer.Content(LiveTV)">691</ondown>
				<onright>650</onright>
				<control type="button" id="633">
					<!-- Subtitles Menu -->
					<width>72</width>
					<height>72</height>
					<texturenofocus>osd-btn-subtitle.png</texturenofocus>
					<texturefocus>osd-btn-subtitle-focus.png</texturefocus>
					<onclick>ActivateWindow(osdsubtitlesettings)</onclick>
					<include>focus-zoom</include>
					<visible>Player.HasVideo</visible>
				</control>
				<control type="button" id="634">
					<!-- Audio Menu -->
					<width>72</width>
					<height>72</height>
					<texturefocus>osd-btn-audio-focus.png</texturefocus>
					<texturenofocus>osd-btn-audio.png</texturenofocus>
					<onclick>ActivateWindow(osdaudiosettings)</onclick>
					<include>focus-zoom</include>
				</control>
				<control type="button" id="635">
					<!-- Video Menu -->
					<width>72</width>
					<height>72</height>
					<texturefocus>osd-btn-video-focus.png</texturefocus>
					<texturenofocus>osd-btn-video.png</texturenofocus>
					<onclick>ActivateWindow(osdvideosettings)</onclick>
					<include>focus-zoom</include>
					<visible>Player.HasVideo</visible>
				</control>
				<control type="button" id="636">
					<!-- Info -->
					<width>72</width>
					<height>72</height>
					<texturefocus>osd-btn-processinfo-focus.png</texturefocus>
					<texturenofocus>osd-btn-proceesinfo.png</texturenofocus>
					<onclick>ActivateWindow(playerprocessinfo)</onclick>
					<include>focus-zoom</include>
				</control>
				<control type="button" id="637">
					<!-- Fullscreen -->
					<width>72</width>
					<height>72</height>
					<texturefocus>osd-btn-zoom-focus.png</texturefocus>
					<texturenofocus>osd-btn-zoom.png</texturenofocus>
					<onclick>Close</onclick>
					<onclick>FullScreen</onclick>
					<include>focus-zoom</include>
				</control>
				<control type="button" id="638">
					<!-- Close -->
					<width>72</width>
					<height>72</height>
					<texturefocus>osd-btn-close-focus.png</texturefocus>
					<texturenofocus>osd-btn-close.png</texturenofocus>
					<onclick>Close</onclick>
					<include>focus-zoom</include>
					<visible>Skin.HasSetting(menulittle)</visible>
				</control>
				<control type="button" id="639">
					<!-- Teletext -->
					<width>72</width>
					<height>72</height>
					<texturenofocus>osd-btn-teletext.png</texturenofocus>
					<texturefocus>osd-btn-teletext-focus.png</texturefocus>
					<onclick>Dialog.Close(VideoOSD)</onclick>
					<onclick>ActivateWindow(Teletext)</onclick>
					<include>focus-zoom</include>
					<visible>VideoPlayer.HasTeletext</visible>
				</control>				
			</control>
			<control type="grouplist" id="670">
				<!-- More group OSD Buttons -->
				<left>1350</left>
				<top>1000</top>
				<width>768</width>
				<height>70</height>
				<itemgap>5</itemgap>
				<defaultcontrol always="true">673</defaultcontrol>
				<orientation>horizontal</orientation>
				<align>center</align>
				<onleft>659</onleft>
				<visible>Control.HasFocus(659) | ControlGroup(670).HasFocus()</visible>
				<control type="button" id="671">
					<!-- DVD Menu -->
					<width>70</width>
					<height>70</height>
					<texturefocus>osd-btn-dvdmenu-focus.png</texturefocus>
					<texturenofocus>osd-btn-dvdmenu.png</texturenofocus>
					<onclick>PlayerControl(ShowVideoMenu)</onclick>
					<include>focus-zoom</include>
					<visible>!VideoPlayer.Content(LiveTV) + VideoPlayer.HasMenu</visible>
				</control>
				<control type="button" id="672">
					<!-- Eject Disk -->
					<width>70</width>
					<height>70</height>
					<texturefocus>osd-btn-eject-focus.png</texturefocus>
					<texturenofocus>osd-btn-eject.png</texturenofocus>
					<onclick>EjectTray()</onclick>
					<onclick>SetFocus(1115)</onclick>
					<include>focus-zoom</include>
					<visible>System.HasMediadvd</visible>
				</control>
				<control type="button" id="673">
					<!-- Bookmarks menu -->
					<width>70</width>
					<height>70</height>
					<texturefocus>osd-btn-bookmark-focus.png</texturefocus>
					<texturenofocus>osd-btn-bookmark.png</texturenofocus>
					<onclick>ActivateWindow(videobookmarks)</onclick>
					<include>focus-zoom</include>
					<visible>!VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="button" id="674">
					<!-- Playlist -->
					<width>70</width>
					<height>70</height>
					<texturefocus>osd-btn-playlist-focus.png</texturefocus>
					<texturenofocus>osd-btn-playlist.png</texturenofocus>
					<onclick>ActivateWindow(videoplaylist)</onclick>
					<include>focus-zoom</include>
					<visible>!VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="button" id="675">
					<!-- Channel Up -->
					<width>70</width>
					<height>70</height>
					<texturefocus>osd-btn-channelup-focus.png</texturefocus>
					<texturenofocus>osd-btn-channelup.png</texturenofocus>
					<onclick>ChannelUp</onclick>
					<include>focus-zoom</include>
					<visible>VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="button" id="676">
					<!-- Channel Down -->
					<width>70</width>
					<height>70</height>
					<texturefocus>osd-btn-channeldown-focus.png</texturefocus>
					<texturenofocus>osd-btn-channeldown.png</texturenofocus>
					<onclick>ChannelDown</onclick>
					<include>focus-zoom</include>
					<visible>VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="togglebutton" id="677">
					<!-- Record -->
					<width>70</width>
					<height>70</height>
					<texturefocus>osd-btn-rec-focus.png</texturefocus>
					<texturenofocus>osd-btn-rec.png</texturenofocus>
					<usealttexture>PVR.CanRecordPlayingChannel + PVR.IsRecordingPlayingChannel</usealttexture>
					<alttexturefocus>osd-btn-rec-recording-focus.png</alttexturefocus>
					<alttexturenofocus>osd-btn-rec-recording.png</alttexturenofocus>
					<onclick>PVR.ToggleRecordPlayingChannel</onclick>
					<include>focus-zoom</include>
					<visible>PVR.CanRecordPlayingChannel</visible>
				</control>
				<control type="button" id="980">
					<!-- EPG Menu -->
					<width>70</width>
					<height>70</height>
					<texturefocus>osd-btn-guide-focus.png</texturefocus>
					<texturenofocus>osd-btn-guide.png</texturenofocus>
					<onclick>Dialog.Close(VideoOSD)</onclick>
					<onclick>ActivateWindow(tvguide)</onclick>
					<include>focus-zoom</include>
					<visible>VideoPlayer.Content(livetv) + VideoPlayer.HasEPG</visible>
				</control>
			</control>
		</control>
	</controls>
</window>